
<div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
  <!-- Indicators -->
  <div class="container"></div>
    <ol class="carousel-indicators">
    </ol>

    <div class="carousel-inner" role="listbox">
      <div class="item active">
        <div class="main-item">
          <img class="first-image" src="https://res.cloudinary.com/dyzsumrcv/image/upload/v1550672207/background_home.jpg">
          <div class="carousel-caption">
            <h1>SNASA</h1>
            <p>Snail National Aeronautics and Space Administration</p>
            <%= link_to "Come with us", new_user_registration_path, :class => "btn btn-ghost" %>
          </div>
        </div>
      </div>
      <% @spaceships.each do |spaceship| %>
        <div class="item">
          <%= link_to spaceship_path(spaceship) do %>
            <%= image_tag(spaceship.photo)%>
              <div class="carousel-caption">
                 <h2><%= spaceship.title %></h2>
                 <p><%= spaceship.seat %> places</p>
                 <h2 class="card-trip-pricing"><%= spaceship.price_per_day %> €</h2>
              </div>
          <%end%>
        </div>
      <%end%>

      <!-- Controls -->
      <a class="left carousel-control" href="#carousel-example-generic" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="right carousel-control" href="#carousel-example-generic" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
  </div>
</div>









<div class="container">
  <div class="row">
    <% @spaceships.each do |spaceship| %>
      <div class="col-xs-12 col-sm-4">
        <%= link_to spaceship_path(spaceship) do %>
            <div class="card-trip">
              <%= image_tag(spaceship.photo) %>
              <div class="card-trip-infos">
                <div>
                  <h2><%= spaceship.title %></h2>
                  <p><%= spaceship.seat %> places</p>
                </div>
                <h2 class="card-trip-pricing"><%= spaceship.price_per_day %> €</h2>
              </div>
            </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>


